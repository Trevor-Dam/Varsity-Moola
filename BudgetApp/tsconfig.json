{
  "extends": "@react-native/typescript-config/tsconfig.json",

  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "jsx": "react-native",
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "lib": ["es6", "ES2015.Core", "ES2015.Promise", "ES2015.Iterable", "ES2017.String"]
  }
}
